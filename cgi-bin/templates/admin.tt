<head>
	<title>Admin - Smart Mobile Plans</title>
	<meta content="text/html; charset=UTF-8" http-equiv="Content-Type"/>
	<meta name="keywords" content=""/>
	<meta name="viewport" content="width=device-width, initial-scale=1"/>
	<link rel="stylesheet" type="text/css" href="../../css/main.css" media="all"/>
	<link href="http://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet" type="text/css"/>
</head>

<body>

	<!-- Start Header -->
	<div class="header">
		<h1>Smart Mobile Plans</h1>
		<h2>Choosing a mobile phone plan has never been this simple!</h2>
	</div> <!-- End Header -->


	<!-- Start Menu -->
	<div class="menu">
		<ul>
			<li><a href="home.cgi" title="Home">HOME</a></li>
			<li><a href="operator.cgi?name=tim">TIM</a></li>
			<li><a href="operator.cgi?name=vodafone">VODAFONE</a></li>
			<li><a href="operator.cgi?name=tre">TRE</a></li>
			<li><a href="operator.cgi?name=wind">WIND</a></li>
			<li><a href="about.html">ABOUT</a></li>
		</ul>
	</div> <!-- End Menu -->


	<!-- Start Breadcrumbs -->
	<div class="breadcrumbs">
		<p>You are in: <a title="Admin Area" xml:lang="en">ADMIN AREA</a></p>
	</div> <!-- End Breadcrumbs -->


	<!-- Start Container -->
	<div class="content">
		<div class="form-area">
			<h3>Hi, [% username %]! Welcome the the Admin Area!</h3>
			<div class="form-bg">
				<h4>Add a new plan: </h4>
				<form class='general-form' method='post' action='planReq.cgi'>
					Operator: 
					<select name="operator">
						<option value="wind">Wind</option>
						<option value="vodafone">Vodafone</option>
						<option value="tre">Tre</option>
						<option value="tim">Tim</option>
					</select>
					<br />
					Payments: 
					<select name='payments'>
						<option value="rechargeable">Rechargeable</option>
						<option value="subscription">Subscription</option>
					</select>
					<br />
					Title: <input type='text' name='title' /><br />
					Start Date: Day
					<select name="sday">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
						<option value="13">13</option>
						<option value="14">14</option>
						<option value="15">15</option>
						<option value="16">16</option>
						<option value="17">17</option>
						<option value="18">18</option>
						<option value="19">19</option>
						<option value="20">20</option>
						<option value="21">21</option>
						<option value="22">22</option>
						<option value="23">23</option>
						<option value="24">24</option>
						<option value="25">25</option>
						<option value="26">26</option>
						<option value="27">27</option>
						<option value="28">28</option>
						<option value="29">29</option>
						<option value="30">31</option>
						<option value="30">31</option>
					</select>
					Month:
					<select name="smonth">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</select>
					Year
					<select name="syear">
						<option value="2015">2015</option>
						<option value="2016">2016</option>
						<option value="2017">2017</option>
						<option value="2018">2018</option>
						<option value="2019">2019</option>
						<option value="2020">2020</option>
					</select>
					<br />
					End Date: Day
					<select name="eday">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
						<option value="13">13</option>
						<option value="14">14</option>
						<option value="15">15</option>
						<option value="16">16</option>
						<option value="17">17</option>
						<option value="18">18</option>
						<option value="19">19</option>
						<option value="20">20</option>
						<option value="21">21</option>
						<option value="22">22</option>
						<option value="23">23</option>
						<option value="24">24</option>
						<option value="25">25</option>
						<option value="26">26</option>
						<option value="27">27</option>
						<option value="28">28</option>
						<option value="29">29</option>
						<option value="30">31</option>
						<option value="30">31</option>
					</select>
					Month:
					<select name="emonth">
						<option value="1">1</option>
						<option value="2">2</option>
						<option value="3">3</option>
						<option value="4">4</option>
						<option value="5">5</option>
						<option value="6">6</option>
						<option value="7">7</option>
						<option value="8">8</option>
						<option value="9">9</option>
						<option value="10">10</option>
						<option value="11">11</option>
						<option value="12">12</option>
					</select>
					Year
					<select name="eyear">
						<option value="2015">2015</option>
						<option value="2016">2016</option>
						<option value="2017">2017</option>
						<option value="2018">2018</option>
						<option value="2019">2019</option>
						<option value="2020">2020</option>
					</select>
					<br />
					Price: <input type='text' name='price' /><br />
					Currency:
					<select name="currency">
						<option value="euro">Euro</option>
						<option value="pounds">Pounds</option>
						<option value="US dollars">US Dollars</option>
					</select>
					<br />
					Unit: 
					<select name="unit">
						<option value="day">Day</option>
						<option value="week">Week</option>
						<option value="month">Month</option>
					</select>
					<br />
					Expiry: <input type='text' name='expiry' /><br />
					Minutes: <input type='text' name='minutes' /><br />
					Messages: <input type='text' name='messages' /><br />
					Data Size: 
					<select name="datasize">
						<option value="MB">MB</option>
						<option value="GB">GB</option>
					</select>
					Internet: <input type='text' name='internet' /><br />
					Description: <textarea name='description' ></textarea><br />
					<input type='submit' name='Submit' value='Submit plan' />
				</form>
			</div>

			<div class="form-bg">
				<h4>Add a new admin: </h4>
				<form class='general-form' method='post' action='adminReq.cgi'>
					Username: <input type='text' name='username' /><br />
					Password: <input type='password' name='pwd' /><br />
					Confirm password: <input type='password' name='pwd-confirm' /><br />
					<input type='submit' name='Submit' value='Submit admin' />
				</form>
			</div>
		</div>
	</div> <!-- End Container -->



	<!-- Start Footer -->
	<div class="footer">
		<p><a href="logout.cgi">Logout</a> | Copyright &copy; 2015 RocketTeam</p>
	</div> <!-- End Footer -->

